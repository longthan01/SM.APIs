@page
@model SM.APIs.AuthServer.Areas.Admin.Pages.ApiScope.DeleteModel
@{
    // set this to make the link bold when the page is navigated
    ViewData["ActivePage"] = ManageNavPages.ApiScope;
}
<div class="row">
    <div class="col-md-12">
        <section>
            <form method="post">
                <h4>Remove API Scope.</h4>
                <hr />
                <input type="hidden" asp-for="ApiScope.Id" />
                <div class="modal-content">
                    <div class="modal-body">
                        <div class="form-group">
                            <label asp-for="ApiScope.Name"></label>
                            <span class="form-control">@Model.ApiScope.Name</span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ApiScope.DisplayName"></label>
                            <span class="form-control">@Model.ApiScope.DisplayName</span>
                        </div>
                        <p>Are you sure you want to delete?.</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary">OK</button>
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </form>
        </section>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
